{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": false,
        "target": "ES2017",
        "sourceMap": false,
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true,
        "lib": [
            "ES2017"
        ],
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        },
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules", "tests", "dist"
    ]
}